{
    "manifest_version": 3,
    "name": "AI Email Agent",
    "version": "1.0",
    "description": "Autonomous inbox agent that replies to emails automatically.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}